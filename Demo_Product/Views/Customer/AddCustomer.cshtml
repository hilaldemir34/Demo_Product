@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<br />
<form method="post">
    @Html.Label("Müşteri")
    @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
  
    <br />
    @Html.Label("Şehir")
    @Html.TextBoxFor(x=>x.City,new{@class="form-control"})
  
    <br />
    @Html.Label("Meslek")
    @Html.DropDownListFor(x=>x.JobID,(List<SelectListItem>)ViewBag.d,new{@class="form-control"})

    <br />
    
    <button class="btn btn-primary">Müşteri Ekle</button>
</form>

